<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="signup" addfieldpath="/administrator/components/com_constantcontact/model/fields">
        <field type="text" name="email" label="COM_CONSTANTCONTACT_FORM_EMAIL_ADDRESS_FIELD_EMAIL_ADDRESS_LABEL"></field>
        <field type="text" name="username"></field>
        <field type="password" name="password"></field>
        <field type="text" name="firstname" label="COM_CONSTANTCONTACT_FORM_CONTACT_FIELD_PREFIX_NAME_LABEL" size="50"></field>
        <field type="text" name="lastname" label="COM_CONSTANTCONTACT_FORM_CONTACT_FIELD_LAST_NAME_LABEL" size="50"></field>
        <field type="text" name="phone" label="COM_CONSTANTCONTACT_FORM_CONTACT_FIELD_HOME_PHONE_LABEL"></field>
        <field type="hidden" name="country" default="us"></field>
        <field type="hidden" name="state" default="MI"></field>
    </fieldset>
